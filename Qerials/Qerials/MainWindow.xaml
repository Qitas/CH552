<Window x:Class="wildfire_MultiFuctionalSerial_assistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:MultiFunction="clr-namespace:wildfire_MultiFuctionalSerial_assistant"
     
        Title="多功能调试助手V0.1" Name="softWareMainWindow" Width="810" Height="640" MinWidth="810"  MinHeight="640">
    <Grid >
        <TabControl Name="functionTabControl" SelectionChanged="FunctionTabControl_SelectionChanged">
            <TabItem Header="串口通信">
                <MultiFunction:SerialBasic ></MultiFunction:SerialBasic>
                
            </TabItem>
            
            <TabItem Header="GSM调试">
                <MultiFunction:GSMAssistant Loaded="GSMAssistant_Loaded" Margin="0,2,0,-2" ></MultiFunction:GSMAssistant>             
                
            </TabItem>
            
            <TabItem Name="GPSItem" Header="GPS定位">
                <MultiFunction:GPSMap Loaded="GPSMap_Loaded"></MultiFunction:GPSMap>
            </TabItem>

            <TabItem Name="FourmItem" Header="硬件相关"  >
                <MultiFunction:Fourm ></MultiFunction:Fourm>
            </TabItem>
            
            
        </TabControl>
        
    </Grid>
</Window>
